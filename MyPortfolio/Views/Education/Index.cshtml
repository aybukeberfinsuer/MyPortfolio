@model List<MyPortfolio.Models.TblEducation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Education</h2>
<br />

<table class="table table-bordered table-hover">

    <tr>
        <th></th>
        <th>School Name</th>
        <th>Department</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Degree</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>

    @foreach (var item in Model){
        count++;
        <tr>
            <td>@count </td>
            <td>@item.SchoolName </td>
            <td> @item.Department</td>
            <td>@item.StartDate.Value.ToShortDateString() </td>
            <td> @(String.IsNullOrEmpty(item.EndDate?.ToString()) ? "Devam Ediyor" : item.EndDate?.ToShortDateString() )</td>

            <td>@item.Degree </td>
            <td> <a href="/Education/Delete/@item.EducationId" class="btn btn-outline-danger">Remove</a> </td>
            <td> <a href="/Education/Update/@item.EducationId" class="btn btn-outline-warning">Update</a> </td>

        </tr>
        
    }


</table>

<br />
<a href="/Education/CreateEducation" class="btn btn-outline-success">Add New Education Information</a>