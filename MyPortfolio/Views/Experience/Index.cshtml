@model List<MyPortfolio.Models.TblExperience>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Index</h2>
<br />

<table class="table table-bordered table-hover">

    <tr>
        <th></th>
        <th>Company Name</th>
        <th>Title</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Description</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count </td>
            <td>@item.CompanyName </td>
            <td> @item.Title</td>
            <td>@item.StartDate.ToString() </td>
            <td> @(String.IsNullOrEmpty(item.EndDate?.ToString()) ? "Devam Ediyor" : item.EndDate?.ToShortDateString() )</td>
            <td>@item.Description </td>
            <td> <a href="/Experience/Delete/@item.ExperienceId" class="btn btn-outline-danger">Remove</a> </td>
            <td> <a href="/Experience/Update/@item.ExperienceId" class="btn btn-outline-warning">Update</a> </td>

        </tr>

    }


</table>

<br />
<a href="/Experience/Create" class="btn btn-outline-success">Add New Experience Information</a>
