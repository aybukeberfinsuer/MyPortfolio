@model MyPortfolio.Models.TblMessage
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Details</h2>
<table class="table table-responsive table-striped">
    <tr>
        <th>Name Surname:</th>
        <td>@Model.Name</td>
    </tr>

    <tr>
        <th>Email:</th> <!-- Corrected the header text here -->
        <td>@Model.Email</td>
    </tr>

    <tr>
        <th>Message:</th> <!-- Added a colon for consistency -->
        <td>@Model.MessageContent</td>
    </tr>
</table>
<br />
<a href="/Message/Index" class="btn btn-primary">Back to Index</a>
