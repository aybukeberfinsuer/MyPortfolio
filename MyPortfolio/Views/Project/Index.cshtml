@model List<MyPortfolio.Models.TblProject>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int project_count = 0;

}

<h2>Projects</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Project Name</th>
        <th>Project Description</th>
        <th>Category Name</th>
        <th>Github URL</th>
        <th>Remove</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model){
        project_count++;
        <tr>
            <td>@project_count</td>
            <td><img src="@item.ImageUrl" style="width:50px; height:50px" alt="Project Image" /> @item.Name</td>
            <td>@item.Description</td>
            <td>@item.TblCategory.Name</td>
            <td> <a href="@item.GithubUrl" class="btn btn-outline-warning">Github Link</a></td>
            <td> <a href="/Project/DeleteProject/@item.ProjectId" class="btn btn-outline-warning">Remove</a></td>
            <td> <a href="/Project/UpdateProject/@item.ProjectId" class="btn btn-outline-warning">Update</a></td>

        </tr>
      }

</table>

<a href="/Project/CreateProject" class="btn btn-outline-warning">Create new project</a>