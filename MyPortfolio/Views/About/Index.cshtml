@model List<MyPortfolio.Models.TblAbout>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>About</h2>
<br />

<table class="table table-bordered table-hover">

    <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Description</th>
        <th>Cv</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@item.ImageUrl" style="width: 100px; height: 100px;" />
            </td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                @if (string.IsNullOrEmpty(item.CvUrl))
                {
                    <span>CV Yüklenmedi</span>
                }
                else
                {
                    <span>CV Yüklendi</span>
                }
            </td>
            <td>
                <a href="/About/Update/@item.AboutId" class="btn btn-outline-warning">Update</a>
            </td>
        </tr>
    }

</table>

<br />
