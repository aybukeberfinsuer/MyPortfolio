@model List<MyPortfolio.Models.TblTestimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Testimonials</h2>
<br />

<table class="table table-bordered table-hover">

    <tr>
        <th></th>
        <th>Image</th>
        <th>Name Surname</th>
        <th>Title</th>
        <th>Comment</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count </td>
            <td>
                <img src="@item.ImageUrl" style="width: 100px; height: 100px;" />
            </td>
            <td>@item.NameSurname </td>
            <td> @item.Title</td>
            <td>@item.Comment </td>
           

            <td> <a href="/Testimonial/Delete/@item.TestimonialId" class="btn btn-outline-danger">Remove</a> </td>
            <td> <a href="/Testimonial/Update/@item.TestimonialId" class="btn btn-outline-warning">Update</a> </td>

        </tr>

    }


</table>

<br />
<a href="/Testimonial/Create" class="btn btn-outline-success">Add New Testimonial Information</a>